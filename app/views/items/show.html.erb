<%= render 'comment_form' %>

<h2>item comments</h2>

<table>
  <thead>
    <tr>
      <th>Body</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @item_comments.each do |item_comment| %>
      <tr>
        <td><%= item_comment.body %></td>
        <td><%= item_comment.user_id %></td>
        <td><%= link_to 'Show', item_comment %></td>
        <td><%= link_to 'Edit', edit_item_comment_path(item_comment) %></td>
        <td><%= link_to 'Destroy', item_comment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_item_path(@item) %> |
